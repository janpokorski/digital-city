<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DigitalCity"
             x:Class="DigitalCity.MainPage">

    <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="40">
        <Entry Placeholder="Destination" IsSpellCheckEnabled="false" x:Name="inputEntry"></Entry>
        <StackLayout>
           <Button Text="Let's go" Clicked="Handle_Clicked_1"></Button>
           <Button Text="Settings" Clicked="Handle_Clicked"></Button> 
        </StackLayout>
    </StackLayout>

</ContentPage>
